instance push-your-luck_inst_mdp__03 {
    domain = push-your-luck_mdp;

    objects {
        die : { d1 };
    };

    non-fluents {
        // reward factors are independent from the die value
        VALUE(@1) = 2.0;
        VALUE(@2) = 2.0;
        VALUE(@3) = 2.0;
        VALUE(@4) = 2.0;
        VALUE(@5) = 2.0;
        VALUE(@6) = 2.0;
        VALUE(@7) = 2.0;
        VALUE(@8) = 2.0;
        VALUE(@9) = 2.0;
        VALUE(@10) = 2.0;
        VALUE(@11) = 2.0;
        VALUE(@12) = 2.0;
        VALUE(@13) = 2.0;
        VALUE(@14) = 2.0;
        VALUE(@15) = 2.0;
        VALUE(@16) = 2.0;
        VALUE(@17) = 2.0;
        VALUE(@18) = 2.0;
        VALUE(@19) = 2.0;
        VALUE(@20) = 2.0;

        // fair 20-sided die
        PROB(d1, @1) = 0.05;
        PROB(d1, @2) = 0.05;
        PROB(d1, @3) = 0.05;
        PROB(d1, @4) = 0.05;
        PROB(d1, @5) = 0.05;
        PROB(d1, @6) = 0.05;
        PROB(d1, @7) = 0.05;
        PROB(d1, @8) = 0.05;
        PROB(d1, @9) = 0.05;
        PROB(d1, @10) = 0.05;
        PROB(d1, @11) = 0.05;
        PROB(d1, @12) = 0.05;
        PROB(d1, @13) = 0.05;
        PROB(d1, @14) = 0.05;
        PROB(d1, @15) = 0.05;
        PROB(d1, @16) = 0.05;
        PROB(d1, @17) = 0.05;
        PROB(d1, @18) = 0.05;
        PROB(d1, @19) = 0.05;
        PROB(d1, @20) = 0.05;
    };

    init-state {
        ~die-value-seen(@1);
    };

    horizon = 40;

    discount = 1.0;
}
