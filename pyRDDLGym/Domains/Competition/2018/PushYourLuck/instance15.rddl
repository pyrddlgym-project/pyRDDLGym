instance push-your-luck_inst_mdp__15 {
    domain = push-your-luck_mdp;

    objects {
        die : { d1, d2, d3 };
    };

    non-fluents {
        // reward factor is 0.25 plus a quarter of the die value
        VALUE(@1) = 0.5;
        VALUE(@2) = 0.75;
        VALUE(@3) = 1.0;
        VALUE(@4) = 1.25;
        VALUE(@5) = 1.5;
        VALUE(@6) = 1.75;
        VALUE(@7) = 2.0;
        VALUE(@8) = 2.25;
        VALUE(@9) = 2.5;
        VALUE(@10) = 2.75;
        VALUE(@11) = 3.0;
        VALUE(@12) = 3.25;
        VALUE(@13) = 3.5;
        VALUE(@14) = 3.75;
        VALUE(@15) = 4.0;
        VALUE(@16) = 4.25;
        VALUE(@17) = 4.5;
        VALUE(@18) = 4.75;
        VALUE(@19) = 5.0;
        VALUE(@20) = 5.25;

        // fair 6-sided die (using only the first 6 odd numbers leads to a die that uses
        // the usual reward factors for 6-valued dice)
        PROB(d1, @1) = 0.166666666;
        PROB(d1, @3) = 0.166666667;
        PROB(d1, @5) = 0.166666667;
        PROB(d1, @7) = 0.166666667;
        PROB(d1, @9) = 0.166666667;
        PROB(d1, @11) = 0.166666666;

        // fair 10-sided die
        PROB(d2, @1) = 0.1;
        PROB(d2, @2) = 0.1;
        PROB(d2, @3) = 0.1;
        PROB(d2, @4) = 0.1;
        PROB(d2, @5) = 0.1;
        PROB(d2, @6) = 0.1;
        PROB(d2, @7) = 0.1;
        PROB(d2, @8) = 0.1;
        PROB(d2, @9) = 0.1;
        PROB(d2, @10) = 0.1;

        // fair 20-sided die
        PROB(d3, @1) = 0.05;
        PROB(d3, @2) = 0.05;
        PROB(d3, @3) = 0.05;
        PROB(d3, @4) = 0.05;
        PROB(d3, @5) = 0.05;
        PROB(d3, @6) = 0.05;
        PROB(d3, @7) = 0.05;
        PROB(d3, @8) = 0.05;
        PROB(d3, @9) = 0.05;
        PROB(d3, @10) = 0.05;
        PROB(d3, @11) = 0.05;
        PROB(d3, @12) = 0.05;
        PROB(d3, @13) = 0.05;
        PROB(d3, @14) = 0.05;
        PROB(d3, @15) = 0.05;
        PROB(d3, @16) = 0.05;
        PROB(d3, @17) = 0.05;
        PROB(d3, @18) = 0.05;
        PROB(d3, @19) = 0.05;
        PROB(d3, @20) = 0.05;
    };

    init-state {
        ~die-value-seen(@1);
    };

    horizon = 40;

    discount = 1.0;
}
